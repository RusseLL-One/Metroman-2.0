<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            android:useLevel="false">

            <gradient
                android:endColor="@color/view_bg_gradient_color_1"
                android:startColor="@color/view_bg_gradient_color_2"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="ring"
            android:innerRadiusRatio="2"
            android:thickness="2dp"
            android:useLevel="false">

            <gradient
                android:endColor="@color/border_gradient_color_1"
                android:startColor="@color/border_gradient_color_2"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
</layer-list>