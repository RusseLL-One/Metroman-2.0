<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.one.russell.metroman_20.presentation.screens.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_typeSelectionFragment"
            app:destination="@id/typeSelectionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/typeSelectionFragment"
        android:name="com.one.russell.metroman_20.presentation.screens.training.type_selection.TypeSelectionFragment"
        android:label="TypeSelectionFragment"
        tools:layout="@layout/fragment_training_type_selection" >
        <action
            android:id="@+id/action_typeSelectionFragment_to_tempoIncreasingSubtypeSelectionFragment"
            app:destination="@id/tempoIncreasingSubtypeSelectionFragment" />
        <action
            android:id="@+id/action_typeSelectionFragment_to_barDroppingSubtypeSelectionFragment"
            app:destination="@id/barDroppingSubtypeSelectionFragment" />
        <action
            android:id="@+id/action_typeSelectionFragment_to_optionsFragment"
            app:destination="@id/optionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tempoIncreasingSubtypeSelectionFragment"
        android:name="com.one.russell.metroman_20.presentation.screens.training.tempo_increasing_subtype_selection.TempoIncreasingSubtypeSelectionFragment"
        android:label="TempoIncreasingSubtypeSelectionFragment" >
        <action
            android:id="@+id/action_tempoIncreasingSubtypeSelectionFragment_to_optionsFragment"
            app:destination="@id/optionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/barDroppingSubtypeSelectionFragment"
        android:name="com.one.russell.metroman_20.presentation.screens.training.bar_dropping_subtype_selection.BarDroppingSubtypeSelectionFragment"
        android:label="BarDroppingSubtypeSelectionFragment" >
        <action
            android:id="@+id/action_barDroppingSubtypeSelectionFragment_to_optionsFragment"
            app:destination="@id/optionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.one.russell.metroman_20.presentation.screens.training.options.OptionsFragment"
        android:label="OptionsFragment">
        <argument
            android:name="trainingFinalType"
            app:argType="com.one.russell.metroman_20.domain.TrainingFinalType" />
    </fragment>
</navigation>